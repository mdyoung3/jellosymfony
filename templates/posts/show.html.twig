{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}

<div class="example-wrapper">
    <article>
        <h1>{{ post.title }}</h1>

        <p>
            <small>
                {% if post.publishedAt %}
                    Published: {{ post.publishedAt|date('F j, Y') }}
                {% else %}
                    Created: {{ post.createdAt|date('F j, Y') }}
                {% endif %}
                | Status: {{ post.status.value }}
            </small>
        </p>

        {% if post.featuredImage %}
            <p><img src="{{ post.featuredImage }}" alt="{{ post.title }}"></p>
        {% endif %}

        {% if post.category %}
            <p>Category: <a href="{{ path('app_category_show', {id: post.category.id}) }}">{{ post.category.name }}</a></p>
        {% endif %}

        {% if post.tags is not empty %}
            <p>Tags:
                {% for tag in post.tags %}
                    <a href="{{ path('app_tags_show', {slug: tag.slug}) }}">{{ tag.name }}</a>{% if not loop.last %}, {% endif %}
                {% endfor %}
            </p>
        {% endif %}

        <hr>

        <div>
            {{ post.content|raw }}
        </div>

        <hr>

        <p><a href="{{ path('app_posts') }}">&larr; Back to Posts</a></p>
    </article>
</div>
{% endblock %}
